# Environment Configuration

# Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=restaurant_db
POSTGRES_USER=restaurant_user
POSTGRES_PASSWORD=secure_password_123

# Directus Configuration
DIRECTUS_KEY=directus-restaurant-key-2024
DIRECTUS_SECRET=directus-super-secret-key-change-in-production
DIRECTUS_ADMIN_EMAIL=admin@restaurant.com
DIRECTUS_ADMIN_PASSWORD=AdminPass123!
DIRECTUS_PUBLIC_URL=http://localhost:8055

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_123

# Microservices Configuration
PRICING_SERVICE_PORT=8001
INVENTORY_SERVICE_PORT=8002
NOTIFICATION_SERVICE_PORT=8003
ANALYTICS_SERVICE_PORT=8004

# Frontend Configuration
VITE_API_URL=http://localhost:8055
VITE_DIRECTUS_URL=http://localhost:8055
VITE_MICROSERVICES_URL=http://localhost:8000

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=notifications@restaurant.com
SMTP_PASSWORD=email_app_password
SMTP_FROM=notifications@restaurant.com

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Payment Configuration (Stripe)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# JWT Configuration
JWT_SECRET=jwt-super-secret-key-change-in-production
JWT_EXPIRE_HOURS=24

# File Storage
STORAGE_DRIVER=local
STORAGE_ROOT=./uploads
# For S3: STORAGE_DRIVER=s3, AWS_ACCESS_KEY_ID, AWS_SECRET_ACCESS_KEY, AWS_DEFAULT_REGION, AWS_BUCKET

# Development
NODE_ENV=development
DEBUG=true
LOG_LEVEL=debug

# Production overrides (uncomment for production)
# NODE_ENV=production
# DEBUG=false
# LOG_LEVEL=info
# DIRECTUS_PUBLIC_URL=https://your-domain.com
# VITE_API_URL=https://api.your-domain.com
# VITE_DIRECTUS_URL=https://cms.your-domain.com